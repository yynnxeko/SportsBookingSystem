            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "CourtPriceRuleUpdateDto": {
        "required": [
          "dayOfWeek",
          "endTime",
          "pricePerHour",
          "startTime"
        ],
        "type": "object",
        "properties": {
          "dayOfWeek": {
            "maximum": 6,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "startTime": {
            "type": "string",
            "format": "time"
          },
          "endTime": {
            "type": "string",
            "format": "time"
          },
          "pricePerHour": {
            "minimum": 0,
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
